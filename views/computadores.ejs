<body>
    <div class="container" id="start">
        <div class="jumbotron">
            <h1>WebTech Informática</h1>
            <p>
                <strong>WebTech Informática</strong> O melhor site para compras de hardware</p>
        </div>
    </div>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="home">E-Commerce</a>
            </div>
            <ul class="nav navbar-nav">
                <li>
                    <a href="/html/home"> Inicio </a>
                </li>
                <li>
                    <a href="/html/cpu"> Computadores </a>
                </li>
                <li>
                    <a href="/html/note"> Notebook's </a>
                </li>
                <li>
                    <a href="/html/imp"> Impressoras </a>
                </li>
                <li>
                    <a href="/html/videogame"> Video Games </a>
                </li>
                <li>
                    <a href="/html/placavideo"> Placas de Video </a>
                </li>
                <li>
                    <a href="/html/monitor"> Monitores </a>
                </li>
                <li>
                    <a href="/html/peri"> Periféricos </a>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="/html/carrinho">
                        <span class="glyphicon glyphicon-shopping-cart"></span> Meu carrinho </a>
                </li>
                <% if (typeof usuarioLogin == 'object') {%>
                    <li>
                        <a href="/html/painel">
                            <span class="glyphicon glyphicon-user">
                                <%=usuarioLogin.nome%>
                            </span>
                        </a>
                    </li>
                    <li>
                        <a href="/html/logout">
                            <span class="glyphicon glyphicon-log-in"></span>
                            <strong> Sair </strong>
                        </a>
                    </li>
                    <%} else {%>
                        <li>
                            <a href="/html/registro">
                                <span class="glyphicon glyphicon-user"></span> Registrar-se</a>
                        </li>
                        <li>
                            <a href="/html/login">
                                <span class="glyphicon glyphicon-log-in"></span> Logar</a>
                        </li>
                        <%}%>
            </ul>
        </div>
    </nav>

    <div class="container-fluid text-center">
        <div class="col-sm-2"></div>
        <div class="col-sm-8" id="cpuid">
            <div class="card-deck">
                <%for(var i = 0;i<lista.length;i++) {%>
                    <div class="col-md-3 col-sm-4">
                        <div class="card">
                            <a href="/html/computador/<%=lista[i].id%>" class="imagem">
                                <img class="card-img-top" src="<%=lista[i].imagem%>" alt="60x130" style="height: 200px; width: 100%; display: block;"> </a>
                            <div class="card-body">
                                <h3 class="card-title">
                                    <%=lista[i].nome%>
                                </h3>
                                <h3 class="card-text">
                                    <%=lista[i].descricao%>
                                </h3>
                                <h3 id="preco" class="card-text">
                                    <%=lista[i].preco%>
                                </h3>
                                <a href="/html/computador/<%=lista[i].id%>" class="card-link"> Ver mais... </a>
                            </div>
                        </div>
                    </div>
                    <%}%>
            </div>
        </div>
    </div>

    <footer class>
        <div class="footer" id="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2  col-md-2 col-sm-4 col-xs-6">
                        <h3> Informações </h3>
                        <ul>
                            <li>
