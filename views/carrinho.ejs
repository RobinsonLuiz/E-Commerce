                <label for="textInput" class="inputOutline">
                        <a href="" class="watsonx watson-alterado2">
                                <i class=" fa fa-send">   </i>
                            </a>
                    <input id="textInput" class="input" autofocus placeholder="Digite algo" type="text"> 
                </label>
            </div>
        </div>
    </div>
