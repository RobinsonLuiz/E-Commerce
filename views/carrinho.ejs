    <main class="begin">
        <div class="container">
            <p id="carrinho">Carrinho
                <a href="./cpu">
                    <h4 id="voltarSite"> Voltar ao site > </h4>
                </a>
            </p>
        </div>
        <section class="content-type">
            <table class="finalizartotal">
                <tr>
                    <th>SubTotal
                        <div class="aparecerNaTela-1">
                            <span class="subtotal-1"> R$ 129,90 </span>
                            <select id="numerodevezes" name="numerodevezes">
                                <option>1x</option>
                                <option>2x</option>
