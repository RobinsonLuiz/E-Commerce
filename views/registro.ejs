    <div class="container" style="margin-top:2%;background: white; text-align: center">
        <div class="col-sm-1"></div>
        <div class="col-sm-3">
            <form action="/html/registro" method="POST">
                <legend>Dados pessoais</legend>
                <div class="form-group">
                    <label for="nome">Nome completo</label>
                    <input type="text" class="form-control" id="nome" name="nome">
                </div>

                <div class="form-group">
                    <label for="idade">Idade</label>
                    <input type="number" class="form-control" id="idade" name="idade">
                </div>

                <div class="datanascimento"></div>
                <label for="date">Data de Nascimento</label>
                <input type="date" class="form-control" id="datanascimento" name="datanascimento">

                <div class="form-group" style="margin-top: 7%">
                    <label for="email">Email</label>
                    <div class="input-group">
                        <span class="input-group-addon">@</span>
                        <input type="email" class="form-control" id="email" name="email">
                    </div>
                </div>

                <div class="form-group">
                    <label for="cpf">CPF</label>
                    <input type="text" class="form-control" placeholder="Ex.: 000.000.000-00" id="cpf" name="cpf">
                </div>

                <div class="form-group">
                    <label for="tel">Telefone</label>
                    <input type="text" class="form-control" placeholder="Ex.:(53) 90000-0000" id="telefone" name="telefone">
                </div>

                <div class="form-group">
                    <input type="submit" class="form-control" id="finaliza" value="Finalizar Cadastro">
                </div>
            </form>
        </div>
        <div class="col-sm-3">
            <div class="erros" style="margin-top: 13%">
                <% if (email) {%>
                    <div class="alert alert-danger">
                        E-mail Já Cadastrado, por favor utilize outro E-mail
                    </div>
                <%}%>
            </div>
        </div>
        <div class="col-sm-3" id="cadastrado">
            <legend>Já é Cadastrado?</legend>

            <div class="form-group">
                <label for="email">Email</label>
                <div class="input-group">
                    <span class="input-group-addon">@</span>
                    <input type="email" class="form-control" id="emailcadastrado" name="emailcadastrado">
                </div>
            </div>

            <div class="form-group">
                <label for="senha">Senha</label>
                <input type="password" class="form-control" id="senhaCadastrado" name="senhaCadastrado">
            </div>
            <div class="form-group">
                <input type="submit" class="form-control" id="logar" value="Realizar login">
            </div>
